# Development Environment Configuration
ENVIRONMENT=development

# Telegram Bot (Создайте отдельного DEV бота через @BotFather)
BOT_TOKEN=your_dev_bot_token_here
BOT_USERNAME=your_dev_bot_username

# Webhook URL (используйте ngrok для локальной разработки)
# Запустите: ngrok http 8080
# Скопируйте HTTPS URL из ngrok (например: https://1234-5678-90ab-cdef.ngrok-free.app)
WEBHOOK_URL=https://your-ngrok-url.ngrok-free.app

# Database (локальная база данных)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/beautyassist_dev

# Redis (опционально для локальной разработки)
REDIS_URL=redis://localhost:6379/0

# Timezone
TIMEZONE=Europe/Moscow

# Debug Mode
DEBUG=true
LOG_LEVEL=DEBUG

# Feature Flags
ENABLE_REMINDERS=true
ENABLE_INCOMPLETE_CHECKER=true
ENABLE_FINANCIAL_ANALYTICS=true

# Freemium Limits (более свободные лимиты для разработки)
FREEMIUM_MAX_CLIENTS=100
FREEMIUM_MAX_SERVICES=50
FREEMIUM_MAX_APPOINTMENTS_PER_MONTH=1000

# Payment Configuration
PAYMENT_PROVIDER_TOKEN=your_test_payment_token
PREMIUM_PRICE_RUB=990
