# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_PATH=/webhook
# Базовый публичный URL без суффикса (домен/ngrok)
# Клиентский Mini App: <BASE>/webapp/index.html
# Кабинет мастера:     <BASE>/webapp-master/master.html
WEBAPP_BASE_URL=https://yourdomain.com

# Admin Configuration
# Telegram IDs администраторов (создателей бота), через запятую
# Узнать свой ID: @userinfobot или @getmyid_bot
ADMIN_TELEGRAM_IDS=123456789,987654321

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/beauty_assist
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (for task queue and caching)
REDIS_URL=redis://localhost:6379/0

# Application Settings
TIMEZONE=Europe/Moscow
DEBUG=False
LOG_LEVEL=INFO

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=False
SMS_PROVIDER_API_KEY=
SMS_PROVIDER_URL=

# Freemium Limits (по предложению: Free до 15 записей/мес)
FREE_MAX_CLIENTS=200
FREE_MAX_SERVICES=20
FREE_MAX_APPOINTMENTS_PER_MONTH=15

# Payment Configuration (для будущей интеграции)
PAYMENT_PROVIDER=
PAYMENT_API_KEY=
# Подписка (Pro)
SUBSCRIPTION_PRICE_RUB=990

# YooKassa Configuration
# Получите в личном кабинете: https://yookassa.ru/my/
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
# URL для возврата после оплаты (например, deep-link в бота)
YOOKASSA_RETURN_URL=https://t.me/your_bot
